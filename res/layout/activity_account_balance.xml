<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dip"
        android:background="@drawable/ic_titlebar"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dip"
            android:text="@string/text_account_balanceinfo"
            android:textColor="#ffffff"
            android:textSize="23sp" />
    </LinearLayout>

    <ListView
        android:id="@+id/lv_account_balance_list"
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:dividerHeight="5dip"
        android:background="@drawable/ic_main_background"
        android:cacheColorHint="#00000000"
        android:layout_weight="1" >
    </ListView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dip"
        android:background="@drawable/ic_boot"
        android:orientation="horizontal"
        android:visibility="visible" >

        <LinearLayout
            android:id="@+id/ll_category_foot"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/lv_account_balance_list"
            android:layout_weight="1"
            android:gravity="center_horizontal|center_vertical" >

            <Button
                android:id="@+id/bt_back"
                android:layout_width="70dip"
                android:layout_height="35dip"
                android:layout_marginRight="20dip"
                android:background="@drawable/btn_style"
                android:text="@string/text_back" />
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>